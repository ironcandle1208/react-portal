name: GitHub Actions Demo

on:
  push:
  branches:
    - main

permissions:
  id-token: write
  contents: read

env:
  # GitHubActionsOIDCRole：作成したIAMロール名
  AWS_ROLE_ARN: arn:aws:iam::011077020616:role/oidc-test-role

jobs:
  deploy:
    runs-on: ubuntu-latest
    defaults:
      run:
        working-directory: ./app
    steps:
      # チェックアウトするアクション
      - name: Checkout Code
        uses: actions/checkout@v2
      # 特定バージョンのnodeを設定するアクション
      - name: Use NodeJS
        uses: actions/setup-node@v1
        with:
          node-version: 24
      # ビルド
      - run: npm run build
      # awsへのアクセス情報を設定
      - uses: aws-actions/configure-aws-credentials@v1
        with:
          role-to-assume: ${{ env.AWS_ROLE_ARN }}
          aws-region: 'ap-northeast-3'
      # S3にビルドしたものをアップロード
      - run: aws s3 sync dist/ s3://samarkandria.com/
